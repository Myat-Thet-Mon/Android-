<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="todos"
        android:textColor="#43ff64d9"
        android:textSize="100dp"
        app:fontWeight="700" />

    <LinearLayout
        android:id="@+id/bodyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/editTxtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:tint="#e6e6e7"
                tools:ignore="UseAppTint" />

            <EditText
                android:id="@+id/editTxt"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:hint="What needs to be done?"
                android:textColorHint="#e7e6e7"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txtBoxLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/txtLayout1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/border_for_txt_box"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/ic_baseline_radio_button_unchecked_24"
                    android:tint="#e6e6e7"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="a"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtLayout2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/border_for_txt_box"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/ic_baseline_radio_button_unchecked_24"
                    android:tint="#e6e6e7"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="b"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtLayout3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/border_for_txt_box"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@drawable/ic_baseline_radio_button_unchecked_24"
                    android:tint="#e6e6e7"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="c"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="20dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_for_txt_box"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="3 items left"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textColor="#aaa099"/>

            <Button
                android:id="@+id/btnAll"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="All"
                android:textSize="8dp"
                android:layout_marginLeft="10dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@color/white"
                android:textColor="#aaa099"/>

            <Button
                android:id="@+id/btnActive"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Active"
                android:textSize="8dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@color/white"
                android:textColor="#aaa099"/>

            <Button
                android:id="@+id/btnCompleted"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:text="Completed"
                android:textSize="8dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@color/white"
                android:textColor="#aaa099"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>